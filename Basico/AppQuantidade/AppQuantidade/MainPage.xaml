<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Spacing="50">

        <Label 
            Text="Quantidade" 
            FontSize="20"
            HorizontalTextAlignment="Center"/>
        <Label 
            x:Name="LblQuantidade"
            Text="1" 
            FontSize="48" 
            TextColor="Red"
            HorizontalTextAlignment="Center"/>

        <StackLayout 
            Orientation="Horizontal"
            Spacing="40">
            
            <Button 
                TextColor="Gray" 
                Text="+" 
                FontSize="48" 
                BorderColor="#707070" 
                BorderWidth="1"  
                BackgroundColor="White"
                WidthRequest="90" 
                HeightRequest="90"
                Clicked="Aumentar"/>
            <Button 
                TextColor="Gray" 
                Text="-" 
                FontSize="48"
                BorderColor="#707070" 
                BorderWidth="1"  
                BackgroundColor="White" 
                WidthRequest="90" 
                HeightRequest="90"
                Clicked="Diminuir"/>
            
        </StackLayout>
    </StackLayout>

</ContentPage>
