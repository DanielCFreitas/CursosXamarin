<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Leiaouts.QuadradoLeiaout.Quadrado">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="40">

            <Frame HorizontalOptions="Center" CornerRadius="100" Padding="0" IsClippedToBounds="True" BorderColor="Black">
                <BoxView Color="Green" HeightRequest="100" WidthRequest="100"/>
            </Frame>
            
            <Frame Padding="0">
                <StackLayout>
                    <Label Text="Steven Spilbberg" TextColor="Black"  FontSize="24" Margin="20, 20, 20, 10" HorizontalOptions="Center"/>
                    <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand"/>
                    <Label Text="Diretor de vários filmes famosos" Margin="20"/>
                </StackLayout>
            </Frame>


            <Frame HasShadow="False" CornerRadius="1220" BorderColor="Green" >
                <Label Text="Welcome to Xamarin.Forms!"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="CenterAndExpand" />
            </Frame>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>